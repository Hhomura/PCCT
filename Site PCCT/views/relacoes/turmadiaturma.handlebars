<h2>Turmas do Dia</h2>

<div class="card">
    <div class="card-body mt-2">
        {{#each turmadia}}
        <div class="card">
            <div class="card-body">
                <h3>turma: {{Turma.curso}} {{Turma.ano}}</h3>
                <a href="/relacoes/TurmaAluno/{{Turma.id}}" class="btn btn-success mt-2">Visualizar Alunos</a>
            </div>
        </div>
        {{else}}
        <h3>nenhum aluno registrado</h3>
        {{/each}}
    </div>
</div>