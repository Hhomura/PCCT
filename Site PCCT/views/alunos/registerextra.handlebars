<h2>Cadastro de alunos em sua segunda turma</h2>

<div class="card">
    <div class="card-body">
        <form action="/alunos/register/extra" method="post">
        
             <label for="alunos">Alunos: </label>
            <select name="alunos" class="form-select" aria-label="Default select example">
                {{#each alunos}}
                <option id="alunos" value="{{id}}" >{{nome}}</option>
                {{else}}
                <option value="0">Nenhum Aluno Registrado</option>
                {{/each}}
            </select>

            <label for="turmas">Turmas: </label>
            <select name="turmas" class="form-select" aria-label="Default select example">
                {{#each turmas}}
                <option id="turmas" value="{{id}}" >{{curso}} {{ano}}</option>
                {{else}}
                <option value="0">Nenhuma Turmma Registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Cadastrar</button>
        </form>
    </div>
</div>

